<?xml version='1.0' encoding='utf-8'?>
<widget id="us.eidinger.cordova.spotlightPoc" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>cordova-plugin-indexappcontent-sampleApp</name>
    <description>
        A sample Apache Cordova application to illustrate the usage of cordova-plugin-indexappcontent
    </description>
    <author email="eidingermarco@gmail.com" href="https://www.eidinger.us">
        Marco Eidinger
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
